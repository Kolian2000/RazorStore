<head>
    <title>Магазин товаров</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>

@foreach (var goods in Model.Goods)
 {
    <body>
        <div class="product-card">
            <img class="card-img" src="/images/@goods.PicturePath" asp-append-version="true">
            <h2>@goods.Name</h2>
            <p>@goods.Price</p>
            <p>@goods.Subscribe </p>
            <p>@goods.Location</p>
            <a asp-page="Detail/GoodsPage" asp-route-id="@goods.Id" target="_blank">Подробнее</a>
        </div>

    </body>
 }

